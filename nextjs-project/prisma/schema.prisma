generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model User {
  id            String         @id @default(cuid())
  name          String
  email         String         @unique
  password      String
  phone         String?
  role          Role          @default(USER)
  appointments  Appointment[]
  complaints    Complaint[]
  createdAt     DateTime      @default(now())
  updatedAt     DateTime      @updatedAt
}

model Appointment {
  id        String    @id @default(cuid())
  date      DateTime
  timeSlot  String
  note      String?
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Complaint {
  id        String    @id @default(cuid())
  title     String
  content   String
  status    Status    @default(PENDING)
  userId    String
  user      User      @relation(fields: [userId], references: [id])
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}

model Service {
  id          String    @id @default(cuid())
  name        String
  description String?
  price       Float
  duration    Int       // Duration in minutes
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
}

enum Role {
  USER
  ADMIN
}

enum Status {
  PENDING
  IN_PROGRESS
  RESOLVED
  REJECTED
}
